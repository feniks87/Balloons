<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nebo"

    tools:context="com.example.eshay.balloons.MainActivity">

    <ImageView
        android:id="@+id/balloonBlue"
        android:layout_width="81dp"
        android:layout_height="186dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/blue_baloon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
    android:id="@+id/balloonRed"
    android:layout_width="81dp"
    android:layout_height="186dp"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/red_baloon"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/balloonGreen"
        android:layout_width="81dp"
        android:layout_height="186dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/green_baloon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
